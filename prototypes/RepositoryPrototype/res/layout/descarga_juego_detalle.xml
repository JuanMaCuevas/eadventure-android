<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  
  <ImageView
        android:id="@+id/icon"
       android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/cabecera"/>
  
  
<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">

<ImageView android:id="@+id/Viewdetallado2" android:layout_height="70px" android:layout_width="70px" android:padding="3px"></ImageView>

<LinearLayout android:id="@+id/LinearLayout02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
<TextView android:text="@+id/titulo" android:id="@+id/titulodetallado2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="22px" android:padding="3px"></TextView>
<TextView android:text="@+id/texto" android:id="@+id/textodetallado2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14px" android:padding="3px"></TextView>
</LinearLayout>

</LinearLayout>

<ProgressBar android:id="@+id/progreso2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100" android:progress="0" android:padding="5px"/>

<LinearLayout android:id="@+id/LinearLayout03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10px">
<Button android:id="@+id/descargacancelar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="cancelar"></Button>
<Button android:id="@+id/descargamenu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="menu principal" android:visibility="visible" android:enabled="false"></Button>
</LinearLayout>
</LinearLayout>
